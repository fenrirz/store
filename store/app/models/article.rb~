class Article < ActiveRecord::Base

  has_many :articles, :dependant => :destroy 
  belongs_to :user  

  validates :article, :presence => true,
                    :length => {:minimum => 3, :maximum => 254},
                    :uniqueness => true,
                    :format => {:with => /^([^@\s]+)@((?:[-a-z0-9]+\.)+[a-z]{2,})$/i}

   
end
