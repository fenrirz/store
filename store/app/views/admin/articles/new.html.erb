<%= form_for @article, :url =>admin_articles_path do |f| %>
  <% if @article.error.any? %>
    <%= pluralize(@article.errors.count, "Error") %>
      <%= @article.errors.full_messages.each.do |msg| %>
      <% msg %>
    <% end %>
  <% end %>

  <%= f.label :title, "Title" %> <br />
  <%= f.text_field :title %><br />
  <%= f.label :body, "Article" %><br />
  <%= f.text_field :body %><br />
  <%= f.label :rating, "Rating" %><br />
  <%= f.text_field :rating %><br />
  <%= user=User.find_by_email(current_user.email)%>
  <%= f.hiddden_field :user_id, :value => user.id%>
  <%= f.submit "save" %>
<% end %>
<%= link_to "back", admin_articles_path%>
